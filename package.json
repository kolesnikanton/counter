  },
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "scripts": {
    "start": "webpack serve",
    "build:types": "tsc --emitDeclarationOnly",
    "build:files": "npx babel src/Counter --out-dir lib --delete-dir-on-start --extensions .tsx,.js,.snap --ignore src/**/__tests__ --copy-files --no-copy-ignored",
